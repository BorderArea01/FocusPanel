<UserControl x:Class="FocusPanel.Views.TasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:FocusPanel.ViewModels"
             xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:TasksViewModel}"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content (Unified) -->
        <DockPanel Grid.Column="0" Margin="24">
            <!-- Header -->
            <Grid DockPanel.Dock="Top" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Back Button -->
                <Button Grid.Column="0"
                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                        Command="{Binding NavigateUpCommand}"
                        Visibility="{Binding CanGoBack, Converter={StaticResource BooleanToVisibilityConverter}}"
                        ToolTip="Go Back"
                        Width="40" Height="40"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                </Button>

                <!-- Title -->
                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentParentItem.Title, TargetNullValue='Focus Lists'}" 
                               FontSize="34"
                               FontWeight="Light"/>
                    <TextBlock Text="{Binding CurrentViewItems.Count, StringFormat='{}{0} Items'}" 
                               Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                               Opacity="0.6"/>
                </StackPanel>
                
                <!-- View Switcher -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Margin="4"
                                 IsChecked="{Binding IsListView}"
                                 Command="{Binding SwitchViewModeCommand}"
                                 CommandParameter="List"
                                 Content="LIST" />
                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Margin="4"
                                 IsChecked="{Binding IsBoardView}"
                                 Command="{Binding SwitchViewModeCommand}"
                                 CommandParameter="Board"
                                 Content="BOARD" />
                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                 Margin="4"
                                 IsChecked="{Binding IsSettingsView}"
                                 Command="{Binding SwitchViewModeCommand}"
                                 CommandParameter="Settings"
                                 Content="SETTINGS" />
                </StackPanel>
            </Grid>

            <!-- Views Switcher -->
            <Grid>
                <!-- LIST VIEW -->
                <DockPanel Visibility="{Binding IsListView, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <!-- Add Task -->
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}" 
                                 materialDesign:HintAssist.Hint="Add a task..."
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 Padding="8">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding AddItemCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button Grid.Column="1" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" 
                                Command="{Binding AddItemCommand}"
                                Margin="16,0,0,0">
                            <materialDesign:PackIcon Kind="Plus"/>
                        </Button>
                    </Grid>
                    
                    <ListBox ItemsSource="{Binding CurrentViewItems}" SelectedItem="{Binding SelectedTask}"
                             HorizontalContentAlignment="Stretch"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,8" Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Complete Checkbox -->
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsCompleted}" 
                                              Command="{Binding DataContext.ToggleTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"
                                              VerticalAlignment="Center"/>
                                    
                                    <!-- Title -->
                                    <TextBlock Grid.Column="1" Text="{Binding Title}" 
                                               VerticalAlignment="Center" 
                                               Margin="12,0"
                                               FontSize="15">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                        <Setter Property="Opacity" Value="0.6"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Hover Actions -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        
                                        <!-- Drill Down / Navigate Button -->
                                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                                Command="{Binding DataContext.NavigateToItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Open List"
                                                Width="30" Height="30"
                                                Margin="0,0,4,0">
                                            <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                                        </Button>

                                        <!-- Delete Button -->
                                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                                Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Delete"
                                                Width="30" Height="30">
                                            <materialDesign:PackIcon Kind="DeleteOutline" Width="18" Height="18"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>

                <!-- BOARD / GALLERY VIEW -->
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding IsBoardView, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Add Task (Board) -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}" 
                                     materialDesign:HintAssist.Hint="Add a new item..."
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="14"
                                     VerticalAlignment="Center"
                                     Padding="8">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding AddItemCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            <Button Grid.Column="1" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" 
                                    Command="{Binding AddItemCommand}"
                                    Margin="16,0,0,0">
                                <materialDesign:PackIcon Kind="Plus"/>
                            </Button>
                        </Grid>

                        <ListBox Grid.Row="1" ItemsSource="{Binding CurrentViewItems}" 
                                 SelectedItem="{Binding SelectedTask}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,16,16"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card Width="200" Height="200" UniformCornerRadius="8" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Cover Image Placeholder (TODO: Bind to actual image) -->
                                            <Border Grid.Row="0" Background="{DynamicResource MaterialDesignDivider}" CornerRadius="8,8,0,0" ClipToBounds="True">
                                                <Grid>
                                                    <materialDesign:PackIcon Kind="ImageOutline" Width="48" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.2"/>
                                                    <Image Source="{Binding CoverImage}" Stretch="UniformToFill" 
                                                           Visibility="{Binding CoverImage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </Grid>
                                            </Border>

                                            <!-- Content -->
                                            <Grid Grid.Row="1" Margin="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding CreatedAt, StringFormat=d}" FontSize="10" Opacity="0.5" Margin="0,4,0,0"/>
                                                </StackPanel>

                                                <!-- Hover Actions (Optional) -->
                                                <Button Grid.Column="1" 
                                                        Style="{StaticResource MaterialDesignIconForegroundButton}"
                                                        Command="{Binding DataContext.NavigateToItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Width="24" Height="24"
                                                        ToolTip="Open">
                                                    <materialDesign:PackIcon Kind="OpenInNew" Width="16" Height="16"/>
                                                </Button>
                                            </Grid>
                                            
                                            <!-- Completed Overlay -->
                                            <Border Grid.RowSpan="2" Background="#80FFFFFF" Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}" CornerRadius="8">
                                                <materialDesign:PackIcon Kind="CheckCircle" Width="48" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Green"/>
                                            </Border>
                                        </Grid>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </ScrollViewer>

                <!-- SETTINGS VIEW -->
                <ScrollViewer Visibility="{Binding IsSettingsView, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                        
                        <!-- Global Settings -->
                        <materialDesign:Card Margin="0,0,0,16" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Global Settings" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>
                                <TextBlock Text="Markdown Image Save Path" Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding ImageSavePath}" IsReadOnly="True" />
                                    <Button Grid.Column="1" Margin="8,0,0,0" Content="..." Command="{Binding SelectImageSavePathCommand}"/>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                        
                        <!-- Custom Fields Settings -->
                        <materialDesign:Card Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Custom Fields" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                                        <TextBlock Text="Define fields for tasks in this scope (Global or Project)." 
                                                   Style="{StaticResource MaterialDesignBody2TextBlock}" 
                                                   Opacity="0.6" Margin="0,4,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Context Indicator -->
                                    <Border Grid.Column="1" CornerRadius="4" Padding="8,4" Background="{DynamicResource PrimaryHueLightBrush}" Visibility="Collapsed">
                                        <TextBlock Text="{Binding CurrentParentItem.Title, TargetNullValue='Global'}" 
                                                   FontSize="12" FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                                
                                <!-- Add New Field -->
                                <StackPanel Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBox Text="{Binding NewFieldName}" 
                                                  materialDesign:HintAssist.Hint="Field Name" 
                                                  Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                  VerticalAlignment="Center"
                                                  Padding="8"
                                                  Margin="0,0,8,0"/>
                                                  
                                         <ComboBox Grid.Column="1" 
                                                   ItemsSource="{Binding FieldTypes}" 
                                                   SelectedItem="{Binding SelectedFieldType, UpdateSourceTrigger=PropertyChanged}" 
                                                   materialDesign:HintAssist.Hint="Type"
                                                   Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                   VerticalAlignment="Center"
                                                   Padding="8"
                                                   Margin="0,0,8,0"/>
                                                   
                                         <Button Grid.Column="2" 
                                                 Command="{Binding AddCustomFieldCommand}" 
                                                 Content="Add"
                                                 Height="40"/>
                                     </Grid>
                                     
                                     <TextBox Text="{Binding NewFieldOptions}" 
                                              materialDesign:HintAssist.Hint="Options (comma separated, e.g. High, Medium, Low)"
                                              materialDesign:HintAssist.HelperText="Required for Single/Multi Select types"
                                              Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                              Padding="8"
                                              Margin="0,16,0,0"
                                              Visibility="{Binding IsFieldTypeSelect, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                                
                                <!-- List Fields -->
                                <ItemsControl ItemsSource="{Binding CustomFieldDefinitions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Type}" FontSize="12" Opacity="0.6"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="2" Style="{StaticResource MaterialDesignIconForegroundButton}"
                                                        Command="{Binding DataContext.DeleteCustomFieldCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="Delete Field">
                                                    <materialDesign:PackIcon Kind="Delete"/>
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>